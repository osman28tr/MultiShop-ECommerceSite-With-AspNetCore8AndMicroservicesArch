{
  "Routes": [
    //Catalog microservice for Visitor
    {
      //Client tarafından bize gelen isteklerin nasıl karşılayıp nasıl response döneceğimizi belirler
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5250
        }
      ],
      //Client tarafından bize gelen istekler
      "UpstreamPathTemplate": "/services/catalog/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotAuthenticationScheme",
        "AllowedScopes": [ "CatalogReadPermission" ]
      }
    },
    //Catalog microservice for admin and manager
