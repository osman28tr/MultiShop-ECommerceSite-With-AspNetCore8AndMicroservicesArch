@model List<ResultReviewDto>
@{
    int counterRating = 0;
}
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count yorum bulunmaktadır</h4>
            <div class="media mb-4">
                @foreach (var item in Model)
                {
                    counterRating = 0;
                    <img src="@item.User.Image" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.User.Name<small> - <i>@item.CreatedDate</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                counterRating++;
                                <i class="fas fa-star"></i>
                            }
                            @if (counterRating < 10)
                            {
                                for (int i = 0; i < 10 - counterRating; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </div>
                        <p>@item.Content.</p>
                    </div>
                }
            </div>
        </div>
        @await Html.PartialAsync("~/Views/Product/AddComment.cshtml",new CreateReviewDto())
    </div>
</div>