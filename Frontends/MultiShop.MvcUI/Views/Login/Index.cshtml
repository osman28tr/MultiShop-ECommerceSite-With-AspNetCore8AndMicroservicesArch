@model CreateLoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v4 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>Multishop Login Sayfası</h2>
                <p class="text-1">Multishop projemiz üzerinden e-ticaret işlemlerini gerçekleştirebilirsiniz. İndirimli ürünler ve fırsatlardan haberdar olmak adına hemen oturum açma işlemi gerçekleştirin.</p>
                <p class="text-1">Alışverişinizi gerçekleştirebilmek, sepetinize ürün eklemek ve ürün listesini görebilmek için oturum açmanız gerekmektedir. Bir hesabınız yoksa aşağıdan kayıt olabilirsiniz</p>
				<div class="form-left-last">
					<a href="/Register/Index/" class="account">Kayıt Ol</a>
				</div>
			</div>
			<form class="form-detail" asp-action="Index" asp-controller="Login" method="post">
				<h2>Multishop Kullanıcı Giriş Formu</h2>
				<div class="form-group">
					<div class="form-row form-row-1">
						<label for="last_name">Kullanıcı Adınız</label>
						<input type="text" asp-for="UserName" class="input-text" required>
					</div>
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label for="password">Şifre</label>
						<input type="password" asp-for="Password" class="input-text" required>
					</div>
				</div>
				<div class="form-row-last">
					<input type="submit" name="login" class="register" value="Giriş Yap">
				</div>
			</form>
		</div>
	</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

