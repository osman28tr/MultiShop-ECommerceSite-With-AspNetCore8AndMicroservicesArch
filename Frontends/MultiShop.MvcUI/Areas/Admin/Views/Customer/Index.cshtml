
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<ResultCustomerDto>
@{
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Müşteri Listesi</h4>
                <p>Müşteriler ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı</th>
                                <th>Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td><img src="@item.ImageUrl" style="width:50px; height:50px;" /></td>
                                    <td><a href="/Admin/Customer/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Customer/Update/@item.Id" class="btn btn-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Customer/Create/" class="btn btn-success">Müşteri ekle</a>
                </div>
            </div>
        </div>

    </div>
</section>

