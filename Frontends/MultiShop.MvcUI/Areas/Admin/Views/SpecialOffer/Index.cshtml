
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<ResultSpecialOfferDto>
@{
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Listesi</h4>
                <p>Özel Teklifler ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Teklif Başlığı</th>
                            <th>Teklif Alt Başlığı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td>@item.SubTitle</td>
                                <td><a href="/Admin/SpecialOffer/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/SpecialOffer/Update/@item.Id" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <a href="/Admin/SpecialOffer/Create/" class="btn btn-success">Özel teklif ekle</a>
                </div>
            </div>
        </div>

    </div>
</section>

